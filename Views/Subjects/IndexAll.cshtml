@model IEnumerable<InstituteWeb.Models.ViewModels.SubjectViewModel>

@{
    ViewData["Title"] = "Subjects";
}

<div class="container">
    <h1>Subjects</h1>
    <a asp-action="Create" class="btn btn-success" asp-controller = "Subjects">Create</a>
</div>
<table class="table container">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maximum_Number_Of_Students)
            </th>
            <th>
                Teacher
            </th>
            <th>
                Career
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maximum_Number_Of_Students)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_Teacher) 
                    @Html.DisplayFor(modelItem => item.Last_Name_Teacher) 
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_Career) 
                    
                </td>
                
                <td>
                    
                    
                    <a asp-action="Details" asp-route-idSubject="@item.SubjectID" class="btn btn-primary btn-sm " title="Details">
                        <i class="fas fa-plus-circle"></i> 
                    </a> |
                    <a asp-action="Edit" asp-route-idSubject="@item.SubjectID" title="Edit" class="btn btn-secondary btn-sm" asp-controller = "Subjects">
                        <i class="fas fa-pencil-alt"></i>
                    </a> |
                    <a asp-action="Delete" asp-route-idSubject="@item.SubjectID" class="btn btn-danger btn-sm " title="Delete">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
