@model InstituteWeb.Models.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="container">
        <h1>Edit</h1>
        <h4>Subject</h4>
        <hr />
        <form asp-action="Edit" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectID" class="control-label"></label>
                <input asp-for="SubjectID" class="form-control" />
                <span asp-validation-for="SubjectID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule" class="control-label"></label>
                <input asp-for="Schedule" class="form-control" />
                <span asp-validation-for="Schedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maximum_Number_Of_Students" class="control-label"></label>
                <input asp-for="Maximum_Number_Of_Students" class="form-control" />
                <span asp-validation-for="Maximum_Number_Of_Students" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherID" class="control-label">Teacher</label>
                <select asp-for="TeacherID" class ="form-control" asp-items="ViewBag.TeacherID"></select>
            </div>            
            <div class="form-group">
                <label asp-for="CareerID" class="control-label">Career</label>
                <select asp-for="CareerID" class ="form-control" asp-items="ViewBag.CareerID"></select>
            </div>    
                        
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container">
    <a asp-action="IndexAll">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
